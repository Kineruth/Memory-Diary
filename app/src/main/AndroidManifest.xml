<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.memoryDiary">

    <uses-feature android:name="android.hardware.camera" />
    <uses-feature android:name="android.hardware.camera.autofocus" />
    <uses-feature android:name="android.hardware.location.gps" />

    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />



    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".InstantSearch.InstantSearchActivity"></activity>
        <activity android:name=".Activity.Start.WelcomeActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />

                <action android:name="android.intent.action.VIEW" />
            </intent-filter>
        </activity>
        <activity android:name=".Activity.Start.PhoneResignationActivity" />
        <activity android:name=".Activity.Start.VerifyCodeActivity" />
        <activity android:name=".Activity.Start.ResetPasswordActivity" />
        <activity android:name=".Activity.Start.ShowCaptureActivity" />
        <activity android:name=".Activity.Memory.AddMemoryActivity" />
        <activity android:name=".Activity.Memory.ShowMemoryActivity" />
        <activity android:name=".Activity.Memory.EditMemoryActivity" />
        <activity android:name=".Activity.Memory.ShowTaggedActivity" />
        <activity android:name=".Activity.Main.MainActivity" />
    </application>

</manifest>