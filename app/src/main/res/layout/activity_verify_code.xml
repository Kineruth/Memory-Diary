<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/lavender_blush">


    <TextView
        android:id="@+id/tvVerifyCode"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="21dp"
        android:layout_marginTop="207dp"
        android:layout_marginRight="17dp"
        android:fontFamily="@font/aclonica"
        android:text="Wait To Get Your Code.."
        android:textAlignment="center"
        android:textColor="@color/maroon"
        android:textSize="24sp"
        android:textStyle="bold"
        app:fontFamily="@font/aclonica" />

    <ProgressBar
        android:id="@+id/progressBar"
        android:layout_below="@id/tvVerifyCode"
        android:layout_centerHorizontal="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />


    <EditText
        android:id="@+id/user_code"
        android:layout_width="274dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/progressBar"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="66dp"
        android:layout_marginLeft="17dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="70dp"
        android:layout_marginRight="17dp"
        android:background="@drawable/maroon_inputs"
        android:fontFamily="@font/aladin"
        android:hint="Enter Verification Code"
        android:digits="0123456789"
        android:inputType="number"
        android:padding="10dp"
        android:textAlignment="center"
        android:textSize="20dp"
        android:maxLength="10"/>

    <Button
        android:id="@+id/btn_sign_in"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/user_code"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"
        android:background="@drawable/maroon_button"
        android:text="Sign In"
        android:textAllCaps="false"
        android:textColor="@color/white" />


</RelativeLayout>