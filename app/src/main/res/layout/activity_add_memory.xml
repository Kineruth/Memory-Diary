<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorAccent"
    tools:context="com.memoryDiary.Activity.Memory.AddMemoryActivity">

    <EditText
        android:id="@+id/add_memory_title"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="15dp"
        android:background="@drawable/inputs"
        android:fontFamily="@font/maitree"
        android:hint="Title"
        android:textAlignment="center"
        android:textAllCaps="false"
        android:textSize="25sp"
        android:textStyle="bold" />

    <ImageView
        android:id="@+id/add_memory_image"
        android:layout_width="match_parent"
        android:layout_height="215dp"
        android:layout_below="@+id/add_memory_title"
        android:layout_marginTop="18dp"
        android:scaleType="fitCenter"
        android:src="@drawable/add_memory_image" />

    <EditText
        android:id="@+id/add_memory_description"
        android:layout_width="404dp"
        android:layout_height="331dp"
        android:layout_below="@+id/add_memory_image"
        android:layout_marginLeft="7dp"
        android:layout_marginTop="22dp"
        android:layout_marginRight="7dp"
        android:layout_marginBottom="5dp"
        android:background="@drawable/inputs"
        android:gravity="start"
        android:hint="Insert your text here..."
        android:fontFamily="serif"
        android:inputType="textCapSentences|textMultiLine"
        android:scrollbars="vertical"
        android:textSize="18sp" />

    <Button
        android:id="@+id/add_memory_button"
        android:layout_width="221dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/add_memory_description"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="94dp"
        android:layout_marginLeft="94dp"
        android:layout_marginTop="21dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="20dp"
        android:background="@drawable/my_button"
        android:fontFamily="serif"
        android:text="Done"
        android:textAllCaps="false"
        android:textColor="@android:color/background_light"
        android:textSize="24sp"
        android:textStyle="bold" />


</RelativeLayout>