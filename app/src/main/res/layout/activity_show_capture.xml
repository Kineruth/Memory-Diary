<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.memoryDiary.Activity.Start.ShowCaptureActivity"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/imageViewCaptured"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="fitXY" />

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/show_capture_floating_button"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:layout_margin="16dp"
        android:layout_gravity="end|bottom"
        android:src="@drawable/ic_check_transparent_24dp"
        app:fabSize="normal"
        app:backgroundTint="@color/babyBlue"
        app:elevation="50dp" />

</FrameLayout>